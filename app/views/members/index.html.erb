<div>
  <h1 class="font-bold text-2xl">Dashboard</h1>
  <div class="flex justify-between">
    <%= render 'breadcrumbs_member' %>
    <%= link_to 'Add New Member', new_member_path, class: "btn btn-sm" %>
  </div>
</div>
<% if @response[:members].present? %>
  <%= render 'layouts/includes/flash_message' %>
  <div class="overflow-x-auto mt-6">
    <table class="table w-full">
      <!-- head -->
      <thead>
      <tr>
        <th>#</th>
        <th>Email</th>
        <th>Role</th>
        <th>Status</th>
        <th>Subscription</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @response[:members].each_with_index do |member, index| %>
        <tr class="hover">
          <th><%= index + 1 %></th>
          <td><%= member.email %></td>
          <td><%= member.role %></td>
          <td><%= member.is_active %></td>
          <td><%= member.subscription %></td>
          <td><a class="btn btn-sm">Action</a></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="mt-8">
    <div class="card w-96 bg-base-200 mx-auto">
      <div class="card-body items-center text-center ">
        <h2 class="card-title">Data Not Found!</h2>
        <p>You can add member to get members data</p>
        <div class="card-actions justify-end">
          <button class="btn btn-sm">Add New Member</button>
          <button class="btn btn-sm btn-ghost">Logout</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
